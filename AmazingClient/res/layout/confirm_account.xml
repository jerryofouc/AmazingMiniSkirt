<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/confirmAccount_avatar_img"
        android:layout_width="match_parent"
        android:layout_height="148dp"
        android:src="@drawable/download" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/confirmAccount_name_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="李晓明"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <ImageView
            android:id="@+id/confirmAccount_sex_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/upload" />

    </LinearLayout>

    <TextView
        android:id="@+id/confirmAccount_school_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="杭州英华幼儿园" />

    <TextView
        android:id="@+id/confirmAccount_class_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="抱抱熊班" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/confirmAccount_textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="生日"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <TextView
            android:id="@+id/confirmAccount_birthday_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2006 . 02 . 15"
            android:textAppearance="?android:attr/textAppearanceMedium" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/confirmAccount_textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="我是"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <TextView
            android:id="@+id/confirmAccount_parent_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="妈妈"
            android:textAppearance="?android:attr/textAppearanceMedium" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/confirmAccount_textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="爸爸"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <TextView
            android:id="@+id/confirmAccount_dadPhone_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="13479564987（李煜）"
            android:textAppearance="?android:attr/textAppearanceMedium" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/confirmAccount_textView10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="妈妈"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <TextView
            android:id="@+id/confirmAccount_monPhone_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="13548969854（林琳）"
            android:textAppearance="?android:attr/textAppearanceMedium" />

    </LinearLayout>

    <Button
        android:id="@+id/confirmAccount_addParent_btn"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="+ 添加联系人" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <Button
            android:id="@+id/confirmAccount_error_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="报错" />

        <Button
            android:id="@+id/confirmAccount_ok_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="确认信息" />

    </LinearLayout>

</LinearLayout>