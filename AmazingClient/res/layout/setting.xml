<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:layout_marginTop="@dimen/activity_vertical_margin" >

        <Button
            android:id="@+id/setting_userInfo_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_bk_up_radius"
            android:gravity="left|center_vertical"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:text="个人信息" />

        <ImageView
            android:id="@+id/setting_img1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@+id/setting_userInfo_btn"
            android:layout_centerVertical="true"
            android:layout_marginRight="17dp"
            android:src="@drawable/btn_right_arrow30x30" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin" >
        
	    <Button
	        android:id="@+id/setting_dimCode_btn"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:background="@drawable/btn_bk_down_radius"
	        android:gravity="left|center_vertical"
	        android:paddingLeft="@dimen/activity_horizontal_margin"
	        android:text="二维码名片" />
	    
	    <ImageView
            android:id="@+id/setting_img2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@+id/setting_dimCode_btn"
            android:layout_centerVertical="true"
            android:layout_marginRight="17dp"
            android:src="@drawable/btn_right_arrow30x30" />

    </RelativeLayout>

    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:layout_marginTop="@dimen/activity_vertical_margin" >
	    
	    <Button
	        android:id="@+id/setting_accountSetting_btn"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:background="@drawable/btn_bk_up_radius"
	        android:gravity="left|center_vertical"
	        android:paddingLeft="@dimen/activity_horizontal_margin"
	        android:text="账户管理" />
	    
	    <ImageView
            android:id="@+id/setting_img3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@+id/setting_accountSetting_btn"
            android:layout_centerVertical="true"
            android:layout_marginRight="17dp"
            android:src="@drawable/btn_right_arrow30x30" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin" >
	    
	    <Button
	        android:id="@+id/setting_systemSetting_btn"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:background="@drawable/btn_bk_down_radius"
	        android:gravity="left|center_vertical"
	        android:paddingLeft="@dimen/activity_horizontal_margin"
	        android:text="系统设置" />
	    
	    <ImageView
            android:id="@+id/setting_img4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@+id/setting_systemSetting_btn"
            android:layout_centerVertical="true"
            android:layout_marginRight="17dp"
            android:src="@drawable/btn_right_arrow30x30" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:layout_marginTop="@dimen/activity_vertical_margin" >
	    
	    <Button
	        android:id="@+id/setting_aboutUs_btn"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:background="@drawable/btn_bk_up_radius"
	        android:gravity="left|center_vertical"
	        android:paddingLeft="@dimen/activity_horizontal_margin"
	        android:text="关于我们" />
	    
	    <ImageView
            android:id="@+id/setting_img5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@+id/setting_aboutUs_btn"
            android:layout_centerVertical="true"
            android:layout_marginRight="17dp"
            android:src="@drawable/btn_right_arrow30x30" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin" >
	    
	    <Button
	        android:id="@+id/setting_contactUs_btn"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:background="@drawable/btn_bk_down_radius"
	        android:gravity="left|center_vertical"
	        android:paddingLeft="@dimen/activity_horizontal_margin"
	        android:text="意见反馈" />
	    
	    <ImageView
            android:id="@+id/setting_img6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@+id/setting_contactUs_btn"
            android:layout_centerVertical="true"
            android:layout_marginRight="17dp"
            android:src="@drawable/btn_right_arrow30x30" />

    </RelativeLayout>

    <Button
        android:id="@+id/setting_logout_btn"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_margin="@dimen/activity_vertical_margin"
        android:background="@drawable/red_btn_bk"
        android:shadowColor="@color/black"
        android:shadowDx="2"
        android:shadowDy="2"
        android:shadowRadius="1"
        android:text="退出登录"
        android:textColor="@color/white" />

</LinearLayout>
