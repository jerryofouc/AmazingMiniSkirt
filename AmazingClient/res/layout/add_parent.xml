<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/activity_horizontal_margin" >

    <EditText
        android:id="@+id/addParent_parent_btn"
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:background="@drawable/input_bk_up_radius"
        android:ems="10"
        android:hint="您是孩子的…"
        android:padding="8dp" >

        <requestFocus />
    </EditText>

    <EditText
        android:id="@+id/addParent_name_btn"
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:background="@drawable/input_bk_no_radius"
        android:ems="10"
        android:hint="您的姓名"
        android:inputType="textPersonName"
        android:padding="8dp" />

    <EditText
        android:id="@+id/addParent_phone_btn"
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:background="@drawable/input_bk_down_radius"
        android:ems="10"
        android:hint="您的联系电话"
        android:inputType="phone"
        android:padding="8dp" />

    <Button
        android:id="@+id/addparent_ok_btn"
        android:layout_width="fill_parent"
        android:layout_height="48dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/red_btn_bk"
        android:text="确定" />

</LinearLayout>
