<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" >
    
    <LinearLayout android:layout_width="wrap_content" android:layout_height="fill_parent"
        		  android:id="@+id/news_personal_item_icon_layout" android:orientation="vertical" android:layout_weight="1" android:background="#FF0000">
        <TextView android:id="@+id/news_personal_item_join_class_days" android:layout_width="wrap_content"
            	  android:layout_height="wrap_content" android:text="中班第42天"/>
    </LinearLayout>
    <LinearLayout android:layout_width="wrap_content" android:layout_height="fill_parent"
        		  android:id="@+id/news_personal_item_content_layout" android:orientation="vertical" android:layout_weight="2">
        <TextView android:id="@+id/news_personal_item_saver" android:layout_width="wrap_content" 
                  android:layout_height="wrap_content" android:text="由妈妈收录自抱抱熊"/>
        <ImageView android:id="@+id/news_personal_item_image" android:layout_width="wrap_content"
            	  android:layout_height="wrap_content" android:src="@drawable/ic_launcher"/>
        <TextView android:id="@+id/news_personal_item_content" android:layout_width="wrap_content"
            	  android:layout_height="wrap_content" android:text="林天羽今天讲的故事很有趣，小朋友们都很喜欢，大家觉得呢"/>
	    
	    <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content"
	        		  android:id="@+id/news_personal_item_icon_layout" android:orientation="horizontal">
	        <TextView android:id="@+id/news_personal_item_publish_date" android:layout_width="wrap_content"
	            android:layout_height="wrap_content" android:text="2013.7.15"/>	        
	        <TextView android:id="@+id/news_personal_item_from" android:layout_width="wrap_content"
	            android:layout_height="wrap_content" android:text="杭州英华幼儿园"/>
	    </LinearLayout>
        
        
        <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content"
        		  android:orientation="horizontal">    
	        <Button android:id="@+id/news_personal_item_like" android:layout_width="wrap_content"
	            android:layout_height="wrap_content" android:text="喜欢" 
	            android:visibility="gone"/>"
	        <Button android:id="@+id/news_personal_item_take_it" android:layout_width="wrap_content"
	            android:layout_height="wrap_content" android:text="收录" 
	            android:visibility="gone" android:textColor="@drawable/btn_txt_color_sel"/>
	        <Button android:id="@+id/news_personal_item_comment" android:layout_width="wrap_content"
	            android:layout_height="wrap_content" android:text="评论" 
	            android:visibility="gone" android:textColor="@drawable/btn_txt_color_sel"/> 
	    </LinearLayout>  
	      	    	    	    	    	    	    	    	    	    
    </LinearLayout>
    
    <LinearLayout android:layout_width="wrap_content" android:layout_height="fill_parent"
        		  android:orientation="vertical" android:layout_weight="1" android:background="#FF0000">
        <Button android:id="@+id/news_personal_item_show_other_buttons" android:layout_width="wrap_content"
            	  android:layout_height="wrap_content" android:text="功能"/>
    </LinearLayout>

</LinearLayout>
