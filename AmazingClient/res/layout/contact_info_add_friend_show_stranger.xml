<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/activity_horizontal_margin" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/activity_horizontal_margin" >

        <ImageView
            android:id="@+id/contact_friend_add_show_stranger_img"
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:src="@drawable/default_avatar163x163" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginTop="66dp"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp" >

                <TextView
                    android:id="@+id/contact_friend_add_show_stranger_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="林天羽"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textSize="24sp" />
            </LinearLayout>

            <TextView
                android:id="@+id/contact_friend_add_show_stranger_from"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="杭州新苗幼儿园中二班"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textSize="12sp" />

        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/contact_friend_add_show_stranger_add"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginTop="@dimen/activity_horizontal_margin"
        android:background="@drawable/red_btn_bk"
        android:shadowColor="#000000"
        android:shadowDx="2"
        android:shadowDy="2"
        android:shadowRadius="1"
        android:text="添加好友"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textStyle="bold" />

</LinearLayout>