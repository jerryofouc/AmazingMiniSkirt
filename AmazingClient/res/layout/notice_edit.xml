<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
 	   <LinearLayout android:id = "@+id/notice_edit_front_layout"
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <TextView android:id = "@+id/notice_edit_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="返回"
            android:gravity="center_vertical"
            android:width="0dp"
            android:height="30dp"
            android:layout_weight="1">
        </TextView>
        
 	   <TextView android:id = "@+id/notice_edit_title" android:layout_width="wrap_content" android:layout_height="wrap_content"
 	       		 android:gravity="center_vertical" android:layout_weight="4" android:width="0dp" android:text = "" android:height="30dp"/>
 	   <TextView android:id="@+id/notice_edit_status" android:layout_width="wrap_content" android:layout_height="wrap_content" android:background="#FF0000"
 	       		 android:gravity="center_vertical" android:layout_weight="1" android:width="0dp" android:text = "" android:height="30dp"/>
       </LinearLayout>
    
 	   <EditText android:id = "@+id/notice_edit_content" android:layout_width="fill_parent" android:layout_height="200dp"
 	       		 android:gravity="left" android:text=""/>

 	   <LinearLayout
 	       android:id="@+id/notice_edit_bottom_layout"
 	       android:layout_width="fill_parent"
 	       android:layout_height="50dp"
 	       android:orientation="horizontal" >

 	       <TextView
 	           android:layout_width="wrap_content"
 	           android:layout_height="wrap_content"
 	           android:layout_gravity="center_vertical"
 	           android:text="发送给:" />
	 	       <Spinner
	 	           android:id="@+id/notice_edit_receiver"
	 	           android:layout_width="200dp"
	 	           android:layout_height="fill_parent"
	 	           />
			<LinearLayout  android:layout_width="fill_parent" android:layout_height="fill_parent" android:gravity="right">
	 	       <Button
	 	           android:id="@+id/notice_edit_send_button"
	 	           android:layout_width="wrap_content"
	 	           android:layout_height="fill_parent"
	 	           android:text="发送" 
	 	           android:layout_marginRight="10dp">
 	     	  </Button>
 	       </LinearLayout>
 	   </LinearLayout>
 	   
 	   <LinearLayout android:layout_width="fill_parent"
 	       android:layout_height="50dp"
 	       android:orientation="horizontal">
 	       <TextView android:id = "@+id/notice_edit_receiver_text"
 	           android:layout_width="fill_parent" android:layout_height="fill_parent" android:background="#EEEEEE"/>
 	   </LinearLayout>

</LinearLayout>
