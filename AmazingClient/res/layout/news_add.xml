<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <RelativeLayout
	    android:layout_width="match_parent"
	    android:layout_height="49dp"
	    android:background="@drawable/titlebar_bk32x74"
	    android:orientation="horizontal" >
	
	    <ImageButton
	        android:id="@+id/news_add_titlebar_back_btn"
	        android:layout_width="49dp"
	        android:layout_height="49dp"
	        android:layout_alignParentLeft="true"
	        android:layout_centerVertical="true"
	        android:background="#00000000"
	        android:src="@drawable/titlebar_back_bg" />
	
	    <TextView
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_centerInParent="true"
	        android:shadowColor="#000000"
	        android:shadowDx="2"
	        android:shadowDy="2"
	        android:shadowRadius="1"
	        android:text="报错"
	        android:textColor="@color/white"
	        android:textSize="20sp"
	        android:textStyle="bold" />
	    
	    <ImageButton
	        android:id="@+id/news_add_titlebar_save_btn"
	        android:layout_width="49dp"
	        android:layout_height="49dp"
	        android:layout_alignParentRight="true"
	        android:layout_centerInParent="true"
	        android:background="#00000000"
	        android:src="@drawable/titlebar_save_bg" />
	</RelativeLayout>

	   <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:baselineAligned="false"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:showDividers="beginning" >
 
         <TextView
             android:id="@+id/newsAdd_desc_text"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
             android:text="发布来自：" />
 
         <TextView
             android:id="@+id/newsAdd_addFrom_text"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="妈妈"
            android:textColor="#fb6843"
            android:textSize="18sp" />
 
     </LinearLayout>
 
    <EditText
        android:id="@+id/newsAdd_input_editText"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:background="@drawable/gray_border"
        android:ems="10"
        android:hint="这里输入你的动态…"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin" />
 
 	   <LinearLayout
 	       android:layout_width="match_parent"
 	       android:layout_height="wrap_content" >
 
 	       <Button
	           android:id="@+id/newsAdd_addPhoto_btn"
	           android:layout_width="160dp"
	           android:layout_height="35dp"
	           android:background="@drawable/addphoto_normal240x53"
 	           android:gravity="left"
	           android:text="" />
 
 	       <Button
	           android:id="@+id/newsAdd_addAudio_btn"
	           android:layout_width="160dp"
	           android:layout_height="35dp"
	           android:background="@drawable/addaudio_normal240x53"
 	           android:gravity="right"
	           android:text="" />
 	       
 	   </LinearLayout>
 
 	   <LinearLayout
 	       android:layout_width="match_parent"
	       android:layout_height="35dp"
	       android:background="@drawable/sharebar_bk36x53"
	       android:paddingLeft="@dimen/activity_horizontal_margin"
	       android:paddingRight="@dimen/activity_horizontal_margin" >
 	   
 		   <LinearLayout
		       android:layout_width="wrap_content"
		       android:layout_height="match_parent"
		       android:gravity="center_vertical" >
 	
 	            <TextView
	                android:id="@+id/newsAdd_share_desc_text"
 	                android:layout_width="wrap_content"
 	                android:layout_height="wrap_content"
 	                android:text="分享到：" />
 	
 	            <ImageView
	                android:id="@+id/newsAdd_shareWeibo_img"
	                android:layout_width="24dp"
	                android:layout_height="24dp"
 	                android:src="@drawable/share_weibo_no36x36" />
 	
 	            <ImageView
	                android:id="@+id/newsAdd_shareWeixin_img"
	                android:layout_width="24dp"
	                android:layout_height="24dp"
 	                android:src="@drawable/share_weixin_no36x36" />
 	
 	            <ImageView
	                android:id="@+id/newsAdd_shareRenren_img"
	                android:layout_width="24dp"
	                android:layout_height="24dp"
 	                android:src="@drawable/share_renren_no36x36" />
 	        </LinearLayout>
 	
 	        <LinearLayout
 	            android:layout_width="wrap_content"
	            android:layout_height="match_parent"
	            android:layout_gravity="right"
	            android:layout_marginLeft="130dp"
	            android:gravity="right|center_vertical" >
 	
 	            <ImageView
	                android:id="@+id/newsAdd_secretLock_img"
	                android:layout_width="24dp"
	                android:layout_height="24dp"
 	                android:src="@drawable/secret_lock_normal36x36" />
 	
 	        </LinearLayout>
 	  	</LinearLayout>

</LinearLayout>
