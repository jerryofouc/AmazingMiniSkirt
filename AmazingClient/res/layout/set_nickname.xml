<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <RelativeLayout
	    android:layout_width="match_parent"
	    android:layout_height="49dp"
	    android:background="@drawable/titlebar_bk32x74"
	    android:orientation="horizontal" >
	
	    <ImageButton
	        android:id="@+id/set_nickname_titlebar_back_btn"
	        android:layout_width="49dp"
	        android:layout_height="49dp"
	        android:layout_alignParentLeft="true"
	        android:layout_centerVertical="true"
	        android:background="#00000000"
	        android:src="@drawable/titlebar_back_bg" />
	
	    <TextView
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_centerInParent="true"
	        android:text="修改昵称"
	        android:textColor="@color/white"
	        android:textSize="16sp" />
	    
	    <ImageButton
	        android:id="@+id/set_nickname_titlebar_save_btn"
	        android:layout_width="49dp"
	        android:layout_height="49dp"
	        android:layout_alignParentRight="true"
	        android:layout_centerInParent="true"
	        android:background="#00000000"
	        android:src="@drawable/titlebar_save_bg" />
	</RelativeLayout>

    <EditText
        android:id="@+id/setNickname_name_editText"
        android:layout_width="match_parent"
        android:layout_height="38dp"
        android:layout_margin="@dimen/activity_horizontal_margin"
        android:layout_marginBottom="10dp"
        android:background="@drawable/input_bk_no_radius"
        android:ems="10"
        android:padding="8dp" >

        <requestFocus />
    </EditText>

    <TextView
        android:id="@+id/setNickname_desc_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:text="有一个好听的昵称可以让别人记住你哦！" />

</LinearLayout>
